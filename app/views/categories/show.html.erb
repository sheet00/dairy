<% content_for :title do params[:controller] + "#" + params[:action] end %>

<div class="page-header">
  <%= link_to categories_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_category_path(@category), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show category</h1>
</div>

<dl class="dl-horizontal">

  <dt>id:</dt>
  <dd><%= @category.id %></dd>

  <dt>no:</dt>
  <dd><%= @category.no %></dd>

  <dt>name:</dt>
  <dd><%= @category.name %></dd>

  <dt>created_at:</dt>
  <dd><%= @category.created_at %></dd>

  <dt>updated_at:</dt>
  <dd><%= @category.updated_at %></dd>

</dl>
