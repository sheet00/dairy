<div id="monthly_count">
	<ul>
		<% i = 0 
		max_count = @diary_counts.count / 2
		%>
		<% @diary_counts.each do |item| %>
			<% count_string = item.year.to_s + "/" + format("%02d", item.month) + " (" + item.monthly_count.to_s + ")" %>
			<li style = "<%= if max_count <= i then 'display:none;' end %>" ><%= count_string %></li>
			<% i = i + 1 %>
		<% end %>

		<% if max_count <= i then %>
		<a id="more_monthly" class="btn btn-primary" href="#more_monthly">more</a>
		<% end %>
	</ul>

</div>